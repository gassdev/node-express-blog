extends layout

block content
    h1 #{title}
    form(action="/articles/edit/"+article._id, method="POST")
        #form-group
            label(for="title") Titre:
            input.form-control(name="title", type="text", value=article.title)
        #form-group
            label(for="author") Auteur:
            input.form-control(name="author", type="text", value=article.author)
        #form-group
            label(for="body") Contenu:
            textarea.form-control(name="body")=article.body
        input.my-2.btn.btn-primary(type="submit", value="Valider")